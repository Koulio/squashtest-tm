<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:osgix="http://www.springframework.org/schema/osgi-compendium"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans.xsd 
            http://www.springframework.org/schema/osgi
            http://www.springframework.org/schema/osgi/spring-osgi.xsd
            http://www.springframework.org/schema/osgi-compendium 
            http://www.springframework.org/schema/osgi-compendium/spring-osgi-compendium.xsd">

	<!-- This listener should be notified of BT connector plugins and registers 
		them -->
	<osgi:service
		ref="squashtest.core.bugtracker.BTConnectorPluginRegistrationListener"
		interface="org.springframework.osgi.service.exporter.OsgiServiceRegistrationListener" />

	<!-- Entrypoint of the Mantis plugin. In a perfect world it would be in 
		a separate bundle -->
	<osgi:service
		ref="squashtest.core.bugtracker.mantis.MantisConnectorProvider"
		interface="org.squashtest.csp.core.bugtracker.spi.BugTrackerConnectorProvider">
		<!-- As it's not in a separate bundle, we have to register it manually -->
		<osgi:registration-listener
			ref="squashtest.core.bugtracker.BTConnectorPluginRegistrationListener" />
	</osgi:service>

	<osgi:service ref="squashtest.core.bugtracker.BugTrackerConnectorFactory"
		interface="org.squashtest.csp.core.bugtracker.core.BugTrackerConnectorFactory" />
</beans>