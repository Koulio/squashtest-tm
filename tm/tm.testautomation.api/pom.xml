<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>squashtest-csp-tm</artifactId>
		<groupId>org.squashtest.tm</groupId>
		<version>1.3.0.IT39-SNAPSHOT</version>
	</parent>
	<artifactId>tm.testautomation.api</artifactId>
	<name>tm.testautomation.api</name>
	<packaging>bundle</packaging>
	<description>Squash TM API / SPI for test automation frameworks</description>


	<properties>
		<bundle.hostname>org.squashtest.csp.tm.service</bundle.hostname>
	</properties>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>hibernate-dependencies</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>

		<!-- ====== JSE DI API ====== -->
		<dependency>
			<groupId>javax.inject</groupId>
			<artifactId>com.springsource.javax.inject</artifactId>
		</dependency>
		<!-- ====== /JSE DI API ====== -->

		<!-- ====== SPRING STUFFS ====== -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>org.springframework.transaction</artifactId>
			<scope>compile</scope>
		</dependency>
		
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>org.springframework.security.core</artifactId>
			<scope>compile</scope>
		</dependency>
		
		
		<!-- ====== /SPRING STUFFS ====== -->
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>spock-test-dependencies</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
			<scope>test</scope>
		</dependency>		
	</dependencies>


	<build>


		<resources>
			<resource>
				<directory>${project.basedir}/src/main/resources</directory>
			</resource>
		</resources>
		
		<testSourceDirectory>src/test/groovy</testSourceDirectory>

		<plugins>
		
			<!--  compile  -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			
			<!-- tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>			
		
		
			<!--  package -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<_include>bnd.bnd</_include>
						<Export-Package>!*internal*,org.squashtest.csp.tm.*, squashtm.testautomation.*, squashtm.remoteapi.*</Export-Package>
						<Import-Package>!org.squashtest.*, !squashtm.testautomation.*, !squashtm.remoteapi.*, *</Import-Package>
						<Fragment-Host>${bundle.hostname}</Fragment-Host>
					</instructions>
				</configuration>
			</plugin>

		</plugins>

	</build>


</project>