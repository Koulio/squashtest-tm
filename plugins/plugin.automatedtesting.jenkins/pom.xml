<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>squash-tm-plugins</artifactId>
		<groupId>org.squashtest.tm</groupId>
		<version>1.3.0.IT39-SNAPSHOT</version>
	</parent>

	<artifactId>plugin.automatedtesting.jenkins</artifactId>
	<name>plugin.automatedtesting.jenkins</name>
	<description>Squash TM Connector for Squash TA on Jenkins</description>
	<packaging>bundle</packaging>

	<properties>
		<squash.dependencies.version>[1.3.0,)</squash.dependencies.version>
		<apache.http.version>3.1.0</apache.http.version>
	</properties>

	<dependencies>

		<!-- ================== Squash TM dependencies ========================== -->

		<dependency>
			<groupId>org.squashtest.tm</groupId>
			<artifactId>tm.automatedtesting.api</artifactId>
			<version>${squash.dependencies.version}</version>
		</dependency>

		<dependency>
			<groupId>org.squashtest.tm</groupId>
			<artifactId>org.squashtest.csp.tm.service</artifactId>
			<version>${squash.dependencies.version}</version>
		</dependency>

		<dependency>
			<groupId>org.squashtest.tm</groupId>
			<artifactId>org.squashtest.csp.core.service</artifactId>
			<version>${squash.dependencies.version}</version>
		</dependency>

		<!-- ================= /Squash TM dependencies ========================== -->

		<!--  ================= Apache dependencies ============================== -->
		
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>com.springsource.org.apache.commons.httpclient</artifactId>
			<version>${apache.http.version}</version>
		</dependency>
		
		<!--  ================ /Apache dependencies ============================== -->

		<!--  ================= Spring dependencies ============================== -->
		
		
		
		
		<!--  ================ /Spring dependencies ============================== -->

	</dependencies>


	<build>


		<resources>
			<resource>
				<directory>${project.basedir}/src/main/resources</directory>
			</resource>
		</resources>

		<testSourceDirectory>src/test/groovy</testSourceDirectory>

		<plugins>

			<!-- compile -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>

			<!-- tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>


			<!-- package -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<_include>bnd.bnd</_include>
						<Export-Package>!*, !squashtm.automatest.jenkins.internal.*, squashtm.automatest.jenkins</Export-Package>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>

		</plugins>

	</build>


</project>